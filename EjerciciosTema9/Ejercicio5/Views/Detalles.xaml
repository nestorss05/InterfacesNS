<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio5.Views.Detalles"
             Title="">

    <ScrollView>
        <VerticalStackLayout Padding="24">
            <Label Text="Detalles" FontSize="32"/>
            <Image Source="{Binding ImageUrl}" WidthRequest="200" HeightRequest="200" HorizontalOptions="Start" Margin="15">
                <Image.Clip>
                    <EllipseGeometry Center="100,100" RadiusX="100" RadiusY="100"/>
                </Image.Clip>
            </Image>
            <Label FontSize="24" Margin="10">
                <Label.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="Nombre"/>
                        <Binding Path="Apellidos"/>
                    </MultiBinding>
                </Label.Text>
            </Label>
            <Label Text="{Binding FechaNac, StringFormat='{0:dd/MM/yyyy}'}" FontSize="16" Margin="6"/>
            <Label Text="{Binding Direccion}" FontSize="16" Margin="6"/>
            <Label Text="{Binding Telefono}" FontSize="16" Margin="6"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>