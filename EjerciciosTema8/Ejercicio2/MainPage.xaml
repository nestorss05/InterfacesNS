<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <ScrollView>
        <FlexLayout Direction="Column" Wrap="NoWrap">
            <Label Text="HEADER" BackgroundColor="Aqua" TextColor="Blue" MaximumHeightRequest="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <FlexLayout FlexLayout.Grow="1">
                <BoxView FlexLayout.Basis="50" Color="Blue" />
                <Label Text="CONTENT" BackgroundColor="Gray" TextColor="Blue" FlexLayout.Grow="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <BoxView FlexLayout.Basis="50" Color="Green" />
            </FlexLayout>
            <Label Text="FOOTER" BackgroundColor="Pink" TextColor="Blue" MaximumHeightRequest="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        </FlexLayout>
    </ScrollView>

</ContentPage>
