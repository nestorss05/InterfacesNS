<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1.MainPage">

    <ScrollView>

        <Border Stroke="Purple" StrokeThickness="5" Padding="10" Margin="10">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10,10,0,0" />
            </Border.StrokeShape>
            
            <StackLayout Orientation="Vertical" VerticalOptions="Center"> 

                <Button Text="Boton 1" BorderColor="Black" Padding="5" MaximumWidthRequest="200" Margin="5"></Button>
                <Button Text="Boton 2" MaximumWidthRequest="200" Margin="5"></Button>
                <Button Text="Boton 3" MaximumWidthRequest="200" Margin="5"></Button>

                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="5">
                    <Label Text="Nombre: " FontAttributes="Bold" Margin="0,0,10,0" VerticalTextAlignment="Center"/>
                    <Entry BackgroundColor="LightBlue" WidthRequest="200" TextColor="Black"></Entry>
                </StackLayout>

            </StackLayout>

        </Border>

    </ScrollView>

</ContentPage>
