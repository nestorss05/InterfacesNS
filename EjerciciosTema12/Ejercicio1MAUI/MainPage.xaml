<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1MAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label x:Name="chatMessages" FontSize="18" HorizontalOptions="Center" />
            <Entry x:Name="myChatMessage" Placeholder="Type your message" FontSize="18" HorizontalOptions="Center"/>
            <Button x:Name="sendButton" Text="Send"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
